# This is a Wrath buildfile. More information is available at: https://github.com/propensive/wrath/

target exoskeleton/core
repo propensive/galilei
repo propensive/ambience
repo propensive/profanity
repo propensive/surveillance

project exoskeleton
  module args
    sources  src/args
    include  spectacular/core gossamer/core

  module core
    sources  src/core
    include  galilei/core ambience/core profanity/core surveillance/core exoskeleton/args
    main     exoskeleton.fury
