# This is a Wrath buildfile. More information is available at: https://github.com/propensive/wrath/

target exoskeleton/example

repo propensive/galilei
repo propensive/ambience
repo propensive/escapade
repo propensive/profanity
repo propensive/surveillance

project exoskeleton
  module args
    sources  src/args
    include  spectacular/core gossamer/core ambience/core profanity/core

  module core
    sources  src/core
    include  exoskeleton/args galilei/core
  
  module daemon
    sources  src/daemon
    include  exoskeleton/core surveillance/core eucalyptus/syslog

  module completions
    sources src/completions
    include exoskeleton/core
  
  module example
    sources   src/example
    include   exoskeleton/daemon escapade/core exoskeleton/completions eucalyptus/ansi
    main      exoskeleton.example
    artifact  rage
