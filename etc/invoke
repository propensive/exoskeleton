#!/bin/sh

SCRIPTDIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &> /dev/null && pwd)"
THIS="$(basename $0)"
ARGS="$(printf '%s\t' "$@")"
ARGCOUNT="$#"
PID="$$"
RUNDIR="${XDG_RUNTIME_DIR:-${TMPDIR:-/run/user/$(id -u)}}"
FIFO="$RUNDIR/$THIS.sock"
STDOUT="$RUNDIR/$THIS-$PID.stdout.sock"
STDIN="$RUNDIR/$THIS-$PID.stdin.sock"
EXITFILE="$RUNDIR/$THIS-$PID.exit"

server() {
  mkfifo "$FIFO"
  # Force the FIFO to stay open
  (while true; do sleep 3600; done) > "$FIFO" &
  exec java -Dsun.misc.URLClassPath.disableJarChecking -jar "$SCRIPTDIR/$THIS" "::start::" "$THIS" "$FIFO" "$PID" &
}

connect() {
  mkfifo "$STDOUT" "$STDIN" "$EXITFILE"
  echo "PROCESS	$PID" > "$FIFO"
  echo "SCRIPT	$PID	$THIS" > "$FIFO"
  echo "SCRIPTDIR	$PID	$SCRIPTDIR" > "$FIFO"
  echo "RUNDIR	$PID	$RUNDIR" > "$FIFO"
  echo "ARGS	$PID	$ARGCOUNT	$ARGS" > "$FIFO"
  echo "ENV	$PID	$(env | tr '\n' '\t')" > "$FIFO"
  echo "START	$PID" > "$FIFO"
  cat - > "$STDIN" <&0 & cat "$STDOUT"
  EXIT="$(cat "$EXITFILE")"
  rm -f "$STDOUT" "$STDIN" "$EXITFILE"
  exit "${EXIT:-1}"
}

cleanup() {
  echo "STOP	$PID" > "$FIFO"
}

trap cleanup INT TERM HUP

if [ ! -p "$FIFO" ]
then
  server
else
  if [ -f "$FIFO" ]
  then
    echo "Cannot create named pipe at $FIFO"
    exit 1
  fi
fi
connect
exit 1
